global-reset()

html
  color:        #212120
  background:   #318494
  font-family: 'Asap', 'helvetia', 'sans-serif'

.logo
  height: 213px;
  position: absolute;
  left: -100px;
  margin-bottom: -213px;
  top: 0;

.header-copy
  top:      15px
  position: relative

.primary-panel
  top:            0
  left:           50%
  size            262px 100%
  padding:        0 10px
  position:       absolute
  background:     #fffceb
  text-align:     center
  margin-left:    -131px
