.end-game-display-area.ended {
  position: absolute;
  z-index: 200;
  left: 0;
  width: 800px;
}

.primary-panel
  top:            0
  left:           50%
  size            400px 100%
  padding:        0 10px
  position:       relative
  background:     #fffceb
  text-align:     center
  margin-left:    -200px
  border-left:    solid 5px #144b5a
  border-right:   solid 5px #144b5a
  height: 600px
  font-family: 'Asap', 'helvetia', 'sans-serif'
  box-sizing: border-box

  h1, h3
    color:        #eb483c
    font-size:    60px
    font-style:   italic
    font-weight:  700

  h2
    font-style: italic
    font-size: 19px;
    line-height: 25px
    width: 70%
    margin: 0 auto

  h1
    padding-top: 30px;

  h3
    margin-top: 20px
    font-size: 25px

  .description
    font-style: italic
    font-weight: bold
    font-size: 25px
    margin-top: 10px

  .button-copy
    margin: 20px 0

  .retry
    display: block
    font-size: 26px
    text-decoration: none
    font-style: italic
    background: #F4C538
    width: 90%
    margin: 0 auto
    border: solid 5px #8B784B
    border-bottom: solid 9px #8B784B
    color:        #212120
    border-radius: 8px
    padding: 9px 0
    box-sizing: border-box
    font-weight: 700
    &:hover
      background: #F8DC88
    &:active
      border-bottom: solid 5px #8B784B
      margin-top: 4px
      margin-bottom: 4px

  .game
    size 800 600
    position absolute
    top 0
    left 0

  .share-copy
    margin-bottom: 10px
    font-style: italic

  .share-content
    margin-top: 90px

  .moon
    position: absolute;
    left: 0;
    bottom: 0;
    width: 490px;
    left: -62px;


.primary-panel.win
  .share-content
    margin-top: 10px

  h2
    width: 90%
  h3
    display: inline-block
    margin-right: 10px

  .description
    display: inline-block

  .button-copy
    margin-bottom: 10px
